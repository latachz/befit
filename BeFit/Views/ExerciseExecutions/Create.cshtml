@model BeFit.DTOs.ExerciseExecutionDTO

@{
    ViewData["Title"] = "Dodaj wykonane ćwiczenie";
}

<h1 class="title">Dodaj wykonane ćwiczenie</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="message is-danger"></div>
    <div class="field">
        <label asp-for="ExerciseTypeId" class="label"></label>
        <div class="control">
            <select asp-for="ExerciseTypeId" class="select" asp-items="ViewBag.ExerciseTypeId">
                <option value="">-- Wybierz typ ćwiczenia --</option>
            </select>
            <span asp-validation-for="ExerciseTypeId" class="help is-danger"></span>
        </div>
        <p class="help">Wybierz typ ćwiczenia, które zostało wykonane</p>
    </div>
    <div class="field">
        <label asp-for="TrainingSessionId" class="label"></label>
        <div class="control">
            <select asp-for="TrainingSessionId" class="select" asp-items="ViewBag.TrainingSessionId">
                <option value="">-- Wybierz sesję treningową --</option>
            </select>
            <span asp-validation-for="TrainingSessionId" class="help is-danger"></span>
        </div>
        <p class="help">Wybierz sesję treningową, podczas której wykonano ćwiczenie</p>
    </div>
    <div class="field">
        <label asp-for="Weight" class="label"></label>
        <div class="control">
            <input asp-for="Weight" class="input" type="number" step="0.1" min="0" max="1000" />
            <span asp-validation-for="Weight" class="help is-danger"></span>
        </div>
        <p class="help">Podaj obciążenie w kilogramach (0 - 1000 kg)</p>
    </div>
    <div class="field">
        <label asp-for="NumberOfSets" class="label"></label>
        <div class="control">
            <input asp-for="NumberOfSets" class="input" type="number" min="1" max="50" />
            <span asp-validation-for="NumberOfSets" class="help is-danger"></span>
        </div>
        <p class="help">Podaj liczbę serii (1 - 50)</p>
    </div>
    <div class="field">
        <label asp-for="RepetitionsPerSet" class="label"></label>
        <div class="control">
            <input asp-for="RepetitionsPerSet" class="input" type="number" min="1" max="200" />
            <span asp-validation-for="RepetitionsPerSet" class="help is-danger"></span>
        </div>
        <p class="help">Podaj liczbę powtórzeń w jednej serii (1 - 200)</p>
    </div>
    <div class="field has-text-centered">
        <div class="control">
            <input type="submit" value="Utwórz" class="button is-success" />
            <a asp-action="Index" class="button is-link">Powrót do listy</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

